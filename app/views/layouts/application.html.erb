<!DOCTYPE html>
<html>
<head>
  <title>TextMe</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render 'layouts/nav' %>

<div class = "container">
  <% if user_signed_in? %>
    <p class="right-align">Logged in as <%= current_user.email %></p>
    
  <% end %>

    <%= flash[:notice] %>
    <%= flash[:alert] %>

  <%= yield %>
</div>

</body>
</html>
